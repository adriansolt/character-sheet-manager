<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <!--
        Added the constraints for entity Weapon.
    -->
    <changeSet id="20220223134558-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="campaign_id"
                                 baseTableName="weapon"
                                 constraintName="fk_weapon__campaign_id"
                                 referencedColumnNames="id"
                                 referencedTableName="campaign"/>

        <addForeignKeyConstraint baseColumnNames="character_id"
                                 baseTableName="weapon"
                                 constraintName="fk_weapon__character_id"
                                 referencedColumnNames="id"
                                 referencedTableName="character"/>
    </changeSet>
</databaseChangeLog>
